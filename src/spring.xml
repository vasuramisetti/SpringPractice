<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
                  "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

<bean id="spring" class="org.demoSpring.SpringDemo">
	<property name="points">
	  <list>
	  <ref bean="ZeroPoint"/>
	  <ref bean="Point2"/>
	  <ref bean="Point3"/>
	  </list>
	</property>
</bean>

<bean id="ZeroPoint" class="org.demoSpring.Point"> 
<property name="x" value="0"/>
<property name="y" value="0"/>
</bean>

<bean id="Point2" class="org.demoSpring.Point"> 
<property name="x" value="0"/>
<property name="y" value="-20"/>
</bean>

<bean id="Point3" class="org.demoSpring.Point"> 
<property name="x" value="+20"/>
<property name="y" value="0"/>
</bean>
</beans>